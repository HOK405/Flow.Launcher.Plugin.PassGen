<UserControl x:Class="Flow.Launcher.Plugin.PassGen.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             MinWidth="420">
  <ScrollViewer VerticalScrollBarVisibility="Auto">
    <StackPanel Margin="12">
      <TextBlock FontSize="14" FontWeight="SemiBold" Text="Password Generator Settings" Margin="0,0,0,10"/>

      <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
        <TextBlock VerticalAlignment="Center" Text="Default length:" Width="140"/>
        <TextBox x:Name="DefaultLengthBox" Width="90"/>
      </StackPanel>

      <CheckBox x:Name="IncludeDigitsBox" Content="Include digits (0-9)" Margin="0,0,0,10"/>

      <TextBlock FontWeight="SemiBold" Text="Letter mode:" Margin="0,0,0,6"/>
      <StackPanel Margin="0,0,0,10">
        <RadioButton x:Name="LowerOnlyRadio" Content="Only lower-case (a-z)" GroupName="LetterMode"/>
        <RadioButton x:Name="UpperOnlyRadio" Content="Only UPPER-case (A-Z)" GroupName="LetterMode"/>
        <RadioButton x:Name="BothRadio" Content="Lower + UPPER (a-z + A-Z)" GroupName="LetterMode"/>
      </StackPanel>

      <TextBlock FontWeight="SemiBold" Text="Symbols (toggle each):" Margin="0,0,0,6"/>
      <WrapPanel Margin="0,0,0,10">
        <CheckBox x:Name="SymQuestion" Content="?" Margin="0,0,12,6"/>
        <CheckBox x:Name="SymAsterisk" Content="*" Margin="0,0,12,6"/>
        <CheckBox x:Name="SymOpenParen" Content="(" Margin="0,0,12,6"/>
        <CheckBox x:Name="SymCloseParen" Content=")" Margin="0,0,12,6"/>
        <CheckBox x:Name="SymExclam" Content="!" Margin="0,0,12,6"/>
        <CheckBox x:Name="SymComma" Content="," Margin="0,0,12,6"/>
      </WrapPanel>

      <Button x:Name="SaveBtn" Content="Save" Width="120"/>
    </StackPanel>
  </ScrollViewer>
</UserControl>
